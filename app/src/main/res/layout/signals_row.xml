<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:minHeight="?listPreferredItemHeightLarge"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:id="@+id/lay_one_signal_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_signal_symbol"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:text="Symbol"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_signal_usd_take_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Take profit(USD)"
                android:textColor="@color/colorGREEN"/>

            <TextView
                android:id="@+id/textView_signal_usd_stop_loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop loss(USD)"
                android:textColor="@color/colorRED"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_signal_btc_take_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take profit(BTC)"
                android:textColor="@color/colorGREEN"/>

            <TextView
                android:id="@+id/textView_signal_btc_stop_loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop loss(BTC)"
                android:textColor="@color/colorRED"/>
        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>